object BlockCiphers {
    def aesCbcDecipher(cipherText: String, key: String): String = {
        new String((new AESCBCCipher).decrypt(Hex.toByteArray(cipherText), Hex.toByteArray(key)))
    }

    def aesCtrDecipher(cipherText: String, key: String): String = {
        new String((new AESCTRCipher).decrypt(Hex.toByteArray(cipherText), Hex.toByteArray(key)))
    }
}

